<% layout("/layouts/boilerplate") %>
<body>
  <div class="row mt-3">
    <div class="col-8 offset-3">
        <h3>Item Details :</h3>
    </div>
    <div class="card col-6 offset-3 show-card">
        <img src="<%= item.image.url %>" class="card-img-top show-img" alt="item_image">
        <div class="card-body">
          <p class="card-text">
          <b><%= item.title %></b> <br>
          <%= item.description %> <br>
          &#8377;<%= item.price.toLocaleString("en-IN")%><br>
         
        </p>
      </div>
    </div>
  </div>
  <br>
  <div class="btns ">
    <a href="/items/<%= item._id %>/edit" class="btn btn-dark col-1 offset-3 edit-btn">Edit</a>
    <form method="POST" action="/items/<%= item._id %>?_method=DELETE">
      <button class="btn btn-dark offset-4">Delete</button>
  </form>
</div>

